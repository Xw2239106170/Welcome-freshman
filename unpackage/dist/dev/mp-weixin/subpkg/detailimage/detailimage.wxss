.image-page {
  width: 100%;
  height: 100vh;
}
.image-page .image-top {
  width: 100%;
  height: 500rpx;
}
.image-page .image-top image {
  width: 100%;
  height: 100%;
}
.image-page .image-bottom {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.image-page .image-bottom .bottom-desc {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 1px solid #efefef;
  margin-bottom: 20px;
}
.image-page .image-bottom .bottom-desc .desc-item {
  padding: 0 20rpx;
  font-size: 14px;
}
.image-page .image-bottom .bottom-desc .desc-time {
  padding: 0 20rpx;
  color: #ccc;
  font-size: 13px;
}
.image-page .bottom-remark {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.image-page .bottom-remark .bottom-left {
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}
.image-page .bottom-remark .bottom-left .left-item {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-page .bottom-remark .bottom-left .left-item image {
  width: 80rpx;
  height: 80rpx;
}
.image-page .bottom-remark .bottom-right {
  border-bottom: 1px solid #efefef;
  width: 80%;
  margin-left: 10rpx;
  padding-bottom: 20rpx;
}
.image-page .bottom-remark .bottom-right .bottom-name {
  font-size: 13px;
  color: #ccc;
}
.image-page .bottom-remark .bottom-right .bottom-total .right-time {
  margin-top: 10rpx;
  font-size: 12px;
  color: #ccc;
  margin-left: 20px;
}
.image-page .bottom-remark .bottom-right .bottom-total .right-item {
  font-size: 14px;
}
.image-page .submit-remark {
  position: fixed;
  bottom: 0;
  left: 0;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #efefef;
}
.image-page .submit-remark .remark-left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.image-page .submit-remark .remark-left .remark-inp {
  width: 150px;
  height: 35px;
  border-radius: 20px;
  border: 1px solid #efefef;
  padding-left: 30px;
  font-size: 12px;
  background-color: #efefef;
  background-image: url("https://zhihuiyingxin.oss-cn-hangzhou.aliyuncs.com/bb1d6935-df80-470a-9c8f-2b69c8ecf74f.png");
  background-size: 16px 16px;
  /* 图标大小 */
  background-repeat: no-repeat;
  /* 不重复 */
  background-position: left 8px center;
}
.image-page .submit-remark .remark-left .remark-inp:focus {
  width: 300px;
  /* 聚焦时的宽度 */
}
.image-page .submit-remark .remark-right {
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.image-page .submit-remark .remark-right .right-image {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.image-page .submit-remark .remark-right .right-image image {
  width: 50rpx;
  height: 50rpx;
}
/* 空空如也 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150px;
  height: 200px;
}
.empty-cart .empty-img {
  width: 90px;
  height: 90px;
}
.empty-cart .tip-text {
  font-size: 12px;
  color: gray;
  margin-top: 15px;
}
