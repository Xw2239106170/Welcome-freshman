.container {
  min-height: 100vh;
  padding: 30rpx;
  background: linear-gradient(to bottom, #f5f5f5, #fff);
}
.status-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.status-card .status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.status-card .status-title {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(to right, #6366f1, #8b5cf6);
  -webkit-background-clip: text;
  color: transparent;
}
.status-card .status-count {
  font-size: 32rpx;
  color: #6366f1;
  font-weight: bold;
}
.progress-bar {
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}
.progress-bar .progress-inner {
  height: 100%;
  background: linear-gradient(to right, #6366f1, #8b5cf6);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}
.category-filter {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}
.category-filter .category-item {
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: #fff;
  color: #666;
  border: 2rpx solid #eee;
  transition: all 0.3s ease;
}
.category-filter .category-active {
  background: linear-gradient(to right, #6366f1, #8b5cf6);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}
.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.card-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}
.card-item .card-image-wrapper {
  position: relative;
  height: 300rpx;
}
.card-item .card-image {
  width: 100%;
  height: 100%;
}
.card-item .card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.3));
}
.card-item .status-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.card-item .card-content {
  padding: 20rpx;
}
.card-item .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.card-item .card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.card-item .card-rarity {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.card-item .card-rarity.rarity-epic {
  background: linear-gradient(to right, #9333ea, #d946ef);
  color: #fff;
}
.card-item .card-rarity.rarity-rare {
  background: linear-gradient(to right, #eab308, #f97316);
  color: #fff;
}
.card-item .card-rarity.rarity-normal {
  background: linear-gradient(to right, #3b82f6, #0ea5e9);
  color: #fff;
}
.card-item .card-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.card-item .card-date,
.card-item .card-hint {
  font-size: 24rpx;
  color: #999;
}
.card-item:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
  transition: -webkit-transform 0.1s ease;
  transition: transform 0.1s ease;
  transition: transform 0.1s ease, -webkit-transform 0.1s ease;
}

