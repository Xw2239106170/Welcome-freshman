<view class="container"><view class="status-card"><view class="status-header"><text class="status-title">我的卡片收藏</text><text class="status-count">{{collectedCount+"/"+$root.g0}}</text></view><view class="progress-bar"><view class="progress-inner" style="{{'width:'+(progress+'%')+';'}}"></view></view></view><view class="category-filter"><block wx:for="{{categories}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><text data-event-opts="{{[['tap',[['selectCategory',['$0'],[[['categories','',__i0__]]]]]]]}}" class="{{['category-item',selectedCategory===item?'category-active':'']}}" bindtap="__e">{{item}}</text></block></view><view class="card-grid"><block wx:for="{{filteredCards}}" wx:for-item="card" wx:for-index="__i1__" wx:key="id"><view data-event-opts="{{[['tap',[['handleCardTap',['$0'],[[['filteredCards','id',card.id]]]]]]]}}" class="{{['card-item',(!card.collected)?'card-uncollected':'']}}" bindtap="__e"><view class="card-image-wrapper"><image class="card-image" src="{{card.image}}" mode="aspectFill"></image><view class="card-overlay"></view><image class="status-icon" src="{{card.collected?'https://zhihuiyingxin.oss-cn-hangzhou.aliyuncs.com/b70575cf-0cc1-4a9d-9d70-9d2703d4aa25.png':'https://zhihuiyingxin.oss-cn-hangzhou.aliyuncs.com/bc64acc1-a51a-4fd5-b83c-923190077a51.png'}}" mode="aspectFit"></image></view><view class="card-content"><view class="card-header"><text class="card-title">{{card.title}}</text><text class="{{['card-rarity','rarity-'+card.rarity]}}">{{card.rarity}}</text></view><text class="card-desc">{{card.description}}</text><block wx:if="{{card.collected}}"><text class="card-date">{{"收集于 "+card.collectedDate}}</text></block><block wx:else><text class="card-hint">完成任务解锁</text></block></view></view></block></view></view>