.face-box {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.face-top {
  height: 500rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}
.face-image {
  width: 400rpx;
  height: 400rpx;
}
.upload-button {
  background-color: #007aff;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  cursor: pointer;
  font-size: 14px;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.pioner {
  margin-top: 10rpx;
  caret-color: green;
}
.example {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
