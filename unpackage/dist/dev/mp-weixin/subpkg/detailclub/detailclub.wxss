.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.banner {
  position: relative;
  height: 600rpx;
}
.banner .banner-bg {
  width: 100%;
  height: 100%;
}
.banner .banner-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 40rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}
.banner .banner-content .banner-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}
.banner .banner-content .banner-title {
  display: block;
  margin: 20rpx 0;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}
.banner .banner-content .banner-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}
.join-btn {
  margin-top: 30rpx;
  padding: 20rpx 60rpx;
  background: #4f46e5;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.section-title {
  display: block;
  margin: 60rpx 0 30rpx;
  padding: 0 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.about-section {
  padding: 0 30rpx;
}
.about-section .about-desc {
  font-size: 28rpx;
  color: #666;
}
.about-section .features {
  margin-top: 30rpx;
}
.about-section .features .feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.about-section .features .feature-item .iconfont {
  margin-right: 20rpx;
  color: #4f46e5;
}
.about-section .features .feature-item .feature-text {
  font-size: 28rpx;
  color: #333;
}
.activities-grid {
  padding: 0 30rpx;
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 30rpx;
}
.activities-grid .activity-card {
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.activities-grid .activity-card .iconfont {
  display: block;
  margin-bottom: 20rpx;
  font-size: 48rpx;
  color: #4f46e5;
}
.activities-grid .activity-card .activity-title {
  display: block;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.activities-grid .activity-card .activity-desc {
  font-size: 26rpx;
  color: #666;
}
.contact-section {
  padding: 0 30rpx 60rpx;
}
.contact-section .contact-grid {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}
.contact-section .contact-grid .contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.contact-section .contact-grid .contact-item .iconfont {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background: #f0f0ff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #4f46e5;
}
.contact-section .contact-grid .contact-item .contact-info {
  flex: 1;
}
.contact-section .contact-grid .contact-item .contact-info .contact-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}
.contact-section .contact-grid .contact-item .contact-info .contact-value {
  font-size: 28rpx;
  color: #333;
}

