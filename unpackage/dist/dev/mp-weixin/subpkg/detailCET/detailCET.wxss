.cet-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 30rpx;
}
.header {
  padding: 20rpx 0 40rpx;
}
.header .header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.header .header-subtitle {
  font-size: 28rpx;
  color: #666;
}
.content .stats-card {
  background: linear-gradient(135deg, #6b8dff, #4466ee);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(100, 102, 238, 0.2);
}
.content .stats-card .stats-item {
  text-align: center;
  color: #fff;
}
.content .stats-card .stats-item .stats-num {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}
.content .stats-card .stats-item .stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}
.cards-container {
  margin-bottom: 30rpx;
}
.cards-container .card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}
.cards-container .card .card-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.cards-container .card .card-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.cards-container .card .card-icon-wrapper.blue {
  background: rgba(100, 102, 238, 0.1);
}
.cards-container .card .card-icon-wrapper.green {
  background: rgba(72, 187, 120, 0.1);
}
.cards-container .card .card-icon {
  width: 48rpx;
  height: 48rpx;
}
.cards-container .card .card-text {
  flex: 1;
}
.cards-container .card .card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}
.cards-container .card .card-subtitle {
  font-size: 24rpx;
  color: #666;
}
.cards-container .card .card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 2rpx solid #f5f5f5;
}
.cards-container .card .card-info .info-text {
  font-size: 24rpx;
  color: #999;
}
.cards-container .card .card-info .arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.tools-grid .tool-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.tools-grid .tool-item .tool-icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.tools-grid .tool-item .tool-icon-wrapper.purple {
  background: rgba(159, 122, 234, 0.1);
}
.tools-grid .tool-item .tool-icon-wrapper.orange {
  background: rgba(237, 137, 54, 0.1);
}
.tools-grid .tool-item .tool-icon-wrapper.cyan {
  background: rgba(56, 178, 172, 0.1);
}
.tools-grid .tool-item .tool-icon-wrapper.red {
  background: rgba(245, 101, 101, 0.1);
}
.tools-grid .tool-item .tool-icon {
  width: 32rpx;
  height: 32rpx;
}
.tools-grid .tool-item .tool-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

