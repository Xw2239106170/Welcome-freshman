.list-box .list-title {
  width: 130px;
  padding: 10rpx;
  font-size: 20px;
  color: #333;
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  color: #9e8655;
  font-family: 'Chewy', cursive;
  border-radius: 20px;
  display: flex;
  align-items: center;
  background-color: #6cc4cb;
  background-color: #e0f3f5;
}
.list-box .scroll-view-container {
  display: flex;
  background-color: #f7f7f7;
  background-color: #6cc4cb;
  background-color: #e0f3f5;
}
.list-box .scroll-view-container .left-scroll-view {
  width: 100%;
  height: 600rpx;
  padding: 10rpx;
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item {
  border-radius: 20px;
  margin-bottom: 10rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border: 2px solid #ccc;
  padding: 10px;
  position: relative;
  overflow: hidden;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  background-color: #e0f3f5;
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item.highlight {
  -webkit-animation: glow 2s linear infinite;
          animation: glow 2s linear infinite;
  border-color: #7FFFD4;
  /* 高亮项边框颜色 */
  background-color: #ffffcc;
  /* 高亮项背景色 */
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item.highlight:before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  -webkit-animation: glow 2s linear infinite;
          animation: glow 2s linear infinite;
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item .scroll-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item .scroll-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list-box .scroll-view-container .left-scroll-view .left-scroll-view-item .scroll-info {
  flex: 1;
  font-size: 16px;
  color: black;
}
@-webkit-keyframes glow {
0%,
  100% {
    border-color: transparent;
    /* 透明边框 */
}
50% {
    border-color: #7FFFD4;
    /* 流光颜色 */
}
}
@keyframes glow {
0%,
  100% {
    border-color: transparent;
    /* 透明边框 */
}
50% {
    border-color: #7FFFD4;
    /* 流光颜色 */
}
}
