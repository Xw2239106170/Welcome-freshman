<view class="container"><view class="my-status"><view class="status-card"><view class="user-info"><image class="avatar" src="{{UserAvatar}}" mode="aspectFill"></image><view class="info-right"><text class="nickname">{{userInfo.nickname}}</text><text class="college">{{userInfo.college}}</text></view></view><view class="status-grid"><view class="status-item"><text class="num">{{userInfo.checkInCount}}</text><text class="label">已打卡</text></view><view class="status-item"><text class="num">{{userInfo.ranking}}</text><text class="label">当前排名</text></view><view class="status-item"><text class="num">{{userInfo.continuous+"天"}}</text><text class="label">连续打卡</text></view></view></view></view><view class="rank-tabs"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['switchTab',[index]]]]]}}" class="{{['tab-item',(currentTab===index)?'active':'']}}" bindtap="__e">{{''+tab.name+''}}</view></block></view><scroll-view class="rank-list" scroll-y="{{true}}" data-event-opts="{{[['scrolltolower',[['loadMore',['$event']]]]]}}" bindscrolltolower="__e"><block wx:for="{{rankList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="{{['rank-item',(index<3)?'top3':'']}}"><view class="{{['rank-num','rank-'+(index+1)]}}"><block wx:if="{{index<3}}"><view class="iconfont icon-crown"><image style="height:70rpx;width:70rpx;" src="{{rank[index].icon}}" mode></image></view></block><block wx:else><text>{{index+1}}</text></block></view><image class="user-avatar" src="{{item.avatar}}" mode="aspectFill"></image><view class="user-detail"><text class="user-name">{{item.nickname}}</text><text class="user-desc">{{item.college}}</text></view><view class="check-info"><text class="check-num">{{item.checkInCount+"次"}}</text><text class="check-label">已打卡</text></view></view></block><block wx:if="{{isLoading}}"><view class="loading"><text class="loading-text">加载中...</text></view></block></scroll-view></view>