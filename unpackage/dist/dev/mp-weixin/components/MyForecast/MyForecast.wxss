.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #EEF2FF 0%, #F5F3FF 100%);
  padding: 0 30rpx;
}
.status-bar {
  height: 25px;
}
.header {
  padding: 30rpx 0;
}
.header .user-info .nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #1F2937;
}
.header .user-info .dept {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 10rpx;
}
.card {
  background: linear-gradient(135deg, #2563EB 0%, #7C3AED 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 30rpx 0;
  color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}
.card .card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}
.card .card-header .card-title {
  font-size: 32rpx;
  font-weight: 500;
}
.card .card-header .card-title .card-no {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}
.card .card-header .qr-wrapper .qr-icon {
  width: 48rpx;
  height: 48rpx;
}
.card .card-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.card .card-footer .balance .amount {
  font-size: 40rpx;
  font-weight: bold;
}
.card .card-footer .balance .label {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}
.card .card-footer .user {
  text-align: right;
}
.card .card-footer .user .name {
  font-size: 32rpx;
  font-weight: 500;
}
.card .card-footer .user .expire {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.grid .grid-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.grid .grid-item .icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.grid .grid-item .icon-wrapper .icon {
  width: 40rpx;
  height: 40rpx;
}
.grid .grid-item .text-wrapper {
  flex: 1;
}
.grid .grid-item .text-wrapper .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1F2937;
}
.grid .grid-item .text-wrapper .desc {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 6rpx;
}
.qr-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.qr-popup .qr-content {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  position: relative;
}
.qr-popup .qr-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.qr-popup .qr-header .qr-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  display: block;
}
.qr-popup .qr-header .qr-desc {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 10rpx;
  display: block;
}
.qr-popup .qr-image-wrapper {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  padding: 20rpx;
  background: #F3F4F6;
  border-radius: 16rpx;
}
.qr-popup .qr-image-wrapper .qr-image {
  width: 100%;
  height: 100%;
}
.qr-popup .qr-refresh {
  margin-top: 30rpx;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.qr-popup .qr-refresh .refresh-timer {
  text-align: center;
  z-index: 1;
}
.qr-popup .qr-refresh .refresh-timer .timer-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2563EB;
  display: block;
}
.qr-popup .qr-refresh .refresh-timer .timer-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 4rpx;
  display: block;
}
.qr-popup .qr-refresh .refresh-progress {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 6rpx solid #E5E7EB;
  border-top-color: #2563EB;
  border-radius: 50%;
  transition: -webkit-transform 1s linear;
  transition: transform 1s linear;
  transition: transform 1s linear, -webkit-transform 1s linear;
}
.qr-popup .close-btn {
  width: 100%;
  height: 88rpx;
  background: #2563EB;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

