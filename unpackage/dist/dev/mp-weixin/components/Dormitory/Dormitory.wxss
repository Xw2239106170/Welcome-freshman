.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e0e7ff 0%, #ede9fe 100%);
  padding: 30rpx;
}
.progress-box {
  margin-bottom: 40rpx;
}
.progress-box .progress-text {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.progress-box .progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 4rpx;
  overflow: hidden;
}
.progress-box .progress-bar .progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #818cf8 0%, #a78bfa 100%);
  transition: width 0.3s ease;
}
.question-card {
  background: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}
.question-card .question-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.question-card .question-header .emoji {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}
.question-card .question-header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}
.question-card .question-header .subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.options-list .option-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}
.options-list .option-item.active {
  background: #818cf8;
  -webkit-transform: scale(1.02);
          transform: scale(1.02);
}
.options-list .option-item.active .option-label,
.options-list .option-item.active .option-desc {
  color: #fff;
}
.options-list .option-item .option-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}
.options-list .option-item .option-desc {
  font-size: 26rpx;
  color: #666;
}
.submit-btn {
  background: linear-gradient(90deg, #818cf8 0%, #a78bfa 100%);
  color: #fff;
  border: none;
  border-radius: 100rpx;
  font-size: 32rpx;
  padding: 24rpx;
  width: 100%;
}
.submit-btn:disabled {
  opacity: 0.5;
}

