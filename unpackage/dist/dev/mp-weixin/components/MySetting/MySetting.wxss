.feedback-page {
  min-height: 100vh;
  background-color: #f5f7fa;
  position: relative;
  overflow: hidden;
}
.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 480rpx;
  background: linear-gradient(135deg, #60a5fa, #6366f1);
  border-radius: 0 0 40rpx 40rpx;
}
.content {
  position: relative;
  padding: 60rpx 40rpx;
  z-index: 1;
}
.header {
  text-align: center;
  margin-bottom: 60rpx;
}
.header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 16rpx;
}
.header .subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}
.feedback-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  -webkit-transform: translateY(0);
          transform: translateY(0);
  transition: all 0.3s ease;
}
.card:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.04);
}
.icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}
.icon-wrapper.icon-orange {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
}
.icon-wrapper.icon-red {
  background: linear-gradient(135deg, #f87171, #ef4444);
}
.icon-wrapper.icon-green {
  background: linear-gradient(135deg, #34d399, #10b981);
}
.icon {
  width: 44rpx;
  height: 44rpx;
}
.card-content {
  flex: 1;
}
.card-content .card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}
.card-content .card-desc {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}
.logout-btn {
  margin: 80rpx auto 0;
  background: linear-gradient(135deg, #f43f5e, #ef4444);
  width: 320rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(239, 68, 68, 0.2);
  transition: all 0.3s ease;
}
.logout-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(239, 68, 68, 0.15);
}
.logout-btn .logout-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.logout-btn text {
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
}
@-webkit-keyframes slideIn {
from {
    opacity: 0;
    -webkit-transform: translateY(20rpx);
            transform: translateY(20rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes slideIn {
from {
    opacity: 0;
    -webkit-transform: translateY(20rpx);
            transform: translateY(20rpx);
}
to {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}

