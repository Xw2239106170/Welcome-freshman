.home-box {
  background: linear-gradient(to bottom, #6cc4cb, white);
  width: 100%;
  height: 100vh;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}
.home-box .person-info {
  width: 100%;
  height: 180rpx;
  display: flex;
  margin-bottom: 20px;
  background-color: #6cc4cb;
}
.home-box .person-info .person-avatar {
  height: 200rpx;
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}
@-webkit-keyframes glow {
0%,
  100% {
    border-color: transparent;
    /* 透明边框 */
}
50% {
    border-color: #7FFFD4;
    /* 流光颜色 */
}
}
@keyframes glow {
0%,
  100% {
    border-color: transparent;
    /* 透明边框 */
}
50% {
    border-color: #7FFFD4;
    /* 流光颜色 */
}
}
.home-box .person-info .person-avatar .item-avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 5rpx solid #efef;
  -webkit-animation: glow 2s linear infinite;
          animation: glow 2s linear infinite;
}
.home-box .person-info .person-avatar .item-avatar .avatar {
  width: 100%;
  height: 100%;
}
.home-box .person-info .person-class {
  width: 75%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  font-size: 10px;
  justify-content: space-around;
  align-items: center;
}
.home-box .person-info .person-class image {
  width: 30%;
  height: 100%;
}
.home-box .person-info .person-class .item-name {
  height: 58rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 8rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
.home-box .person-info .person-class .item-name .name-word {
  margin-bottom: 3rpx;
  color: #ffff;
}
.home-box .person-info .person-class .item-name .name-image {
  width: 60rpx;
  height: 100%;
}
.home-box .person-info .person-class .item-name .name-image .word-image {
  width: 100%;
  height: 100%;
}
.hidden-info {
  flex: 1;
  font-size: 16px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hidden-info:hover {
  white-space: normal;
  overflow: visible;
  text-overflow: clip;
}

